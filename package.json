{
	"name": "scouting-app",
	"version": "0.0.0",
	"scripts": {
		"biome": "biome",
		"lint": "biome lint",
		"format": "biome format",
		"format:fix": "biome format --write",
		"lint:fix": "biome lint --write",
		"precommit": "biome format --write && biome lint --write",
		"check": "biome check",
		"check:fix": "biome check --write",
		"checks:ci": "bun run typecheck && biome ci",
		"typecheck": "tsc --build --pretty ./tsconfig.base.json",
		"dev": "concurrently \"cd backend && bun run dev\" \"cd frontend && bun run dev\"",
		"dev:backend": "cd backend && bun run dev",
		"dev:frontend": "cd frontend && bun run dev",
		"build": "bun run build:backend && bun run build:frontend",
		"build:backend": "cd backend && bun run build",
		"build:frontend": "cd frontend && bun run build",
		"prisma:gen": "bunx prisma generate --schema packages/db/schema.prisma",
		"prisma:migrate:dev": "bunx prisma migrate dev --schema packages/db/schema.prisma",
		"prisma:migrate:deploy": "bunx prisma migrate deploy --schema packages/db/schema.prisma",
		"prisma:seed": "bunx prisma db seed --schema packages/db/schema.prisma"
	},
	"prisma": {
		"seed": "bun --bun db/seed.ts"
	},
	"workspaces": [
		"backend",
		"frontend"
	],
	"devDependencies": {
		"@biomejs/biome": "2.2.5",
		"concurrently": "^9.2.1",
		"typescript": "~5.7.2"
	}
}
